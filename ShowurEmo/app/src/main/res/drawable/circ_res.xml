<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#ab7b7b" />
            <gradient android:angle="-90" android:startColor="#ac605f" android:endColor="#d67c81"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#d66f76" />
            <solid android:color="#c25d6a"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#d16d74" />
            <gradient android:angle="-90" android:startColor="#e64855" android:endColor="#ea666f" />
        </shape>
    </item>
</selector>